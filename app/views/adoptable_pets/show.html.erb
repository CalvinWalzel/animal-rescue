<%= render "components/container" do %>

  <!-- HEADER -->
  <% nav_items = [
    { label: "Overview", url: adoptable_pet_path(@pet) },
    { label: "Applications", url: "/applications" },
    { label: "ToDos", url: "/todos" },
    { label: "Files", url: "/files" },
    { label: "Timeline", url: "/timeline" },
  ] %>

<%= render "components/header", pretitle: @pet.breed, title: @pet.name, avatar: @pet.images.first, nav_items: nav_items do |c| %>
  <% c.cover_photo do %>
    <img src="https://images.unsplash.com/photo-1591160690555-5debfba289f0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=928&q=80" class="header-img-top" style='height: 250px; object-fit: cover'>
  <% end %>
  <% c.actions do %>
    <a href="#!" class="btn btn-primary d-block d-md-inline-block lift">
      Adopt <%= @pet.name %>
    </a>
  <% end %>
<% end %>

<!-- CONTENT -->
<%= render "components/page_content" do |c| %>

  <% c.content do %>
    <div class="col-12 col-xl-8">
      <%= render 'components/card', title: "Chat", icon: "chat" do |c| %>
      <% end %>
    </div>

    <div class="col-12 col-xl-4">
      <%= render 'components/card', title: "About #{@pet.name}", icon: "check-circle" do |c| %>
      <% end %>

      <!-- Card -->
      <%= render 'components/card', title: "ToDos", icon: "check-circle" do |c| %>
      <% end %>

      <%= render 'components/card', title: "Files", icon: "files" do |c| %>
      <% end %>
    <% end %>
  <% end %>
<% end %>