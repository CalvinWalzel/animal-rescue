<!DOCTYPE html>
<html>
  <head>
    <title>BajaPetRescue</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "dashkit/theme.bundle", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashkit/libs.bundle", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <%= javascript_importmap_tags %>

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>
  </head>

  <body class='d-flex flex-column min-vh-100'>
    <%= render "layouts/navbar" %>

    <% if flash[:notice] %>
      <div class="flash-notice bigger">
        <%= notice %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash-alert bigger">
        <%= alert %>
      </div>
    <% end%>

    <div>
      <%= yield %>
    </div>

    <%= render "layouts/footer" %>
  </body>
</html>
