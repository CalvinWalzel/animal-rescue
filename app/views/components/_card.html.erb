<div class="card">

  <% if local_assigns[:title] %>
    <div class="card-header">
      <h3 class="card-header-title">
        <% if local_assigns[:icon] %>
          <i class="me-1 bi bi-<%= local_assigns[:icon] %>"></i>
        <% end %>
        <%= local_assigns[:title] %>
      </h3>
    </div>
  <% end %>

  <div class="card-body">
    <%= partial.body %>
  </div>
</div>


